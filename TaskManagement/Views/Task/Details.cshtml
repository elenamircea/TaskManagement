    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AsignedTo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AsignedTo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

    </dl>
</div>
<hr />
<div>
    <h4>Comments</h4>
    @foreach (var comment in Model.comments)
    {
        <p>@Html.DisplayFor(commentItem => comment.Text)</p>
        <p class="comment-date">@Html.DisplayFor(commentItem => comment.PostedAt)</p>
        <div class="row">
            <div class="col-md-1">
                <a href="@Url.Action("Edit", "Comment", new { id = comment.Id, taskId = Model.Id })">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    Edit
                </a>
            </div>
            <div class="col-md-1">
                @*@Html.ActionLink("Delete", "Delete", "Comment", new { id = comment.Id, taskId = Model.Id }, null)*@
                <a href="@Url.Action("Delete", "Comment", new { id = comment.Id, taskId = Model.Id })">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    Delete
                </a>
            </div>
        </div>
        <hr />
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Add new comment", "Create", "Comment", new { id = Model.Id, taskId=Model.Id }, null) |

